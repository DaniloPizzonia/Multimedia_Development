<Window x:Class="MasterConverter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MasterConverter"
        mc:Ignorable="d"
        xmlns:i18n="clr-namespace:MasterConverter.Properties"
        Loaded="Window_Loaded"
        Title="{x:Static i18n:Resources.appName}" Height="350" Width="525">
    <Grid>
        <ComboBox x:Name="oComboBox_i18n" HorizontalAlignment="Left" VerticalAlignment="Top"  Width="34" SelectionChanged="oComboBox_i18n_SelectionChanged" Margin="441,0,0,0"/>
        <Button x:Name="oButto_restLanguage" HorizontalAlignment="Right" VerticalAlignment="Top" Content="{x:Static i18n:Resources.resetButton}" Height="22" Width="42" Margin="0,0,0,0" Click="oButto_restLanguage_Click"/>
        <StackPanel Margin="50,50,47,157" Orientation="Horizontal">
            <Grid Width="421">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <Button x:Name="button_convert" Grid.Column="0" Margin="0,0,80,10" HorizontalAlignment="Right" VerticalAlignment="Bottom" Content="{x:Static i18n:Resources.convertButton}" Height="22" Width="62" Click="oButto_restLanguage_Click"/>
                <TextBox x:Name="textBox_input" HorizontalAlignment="Center" Height="43" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Center" Width="148" VerticalContentAlignment="Center"/>

                <Rectangle Name="oRect_3" Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="76" Stroke="Black" VerticalAlignment="Top" Width="190" MouseLeftButtonUp="oRect_MouseLeftButtonUp" Grid.Column="1" Margin="0,10,0,0"/>
                <StackPanel Orientation="Horizontal" Grid.Column="1" >
                    
                    <Button x:Name="button_copy" HorizontalAlignment="Right" VerticalAlignment="Bottom" Content="{x:Static i18n:Resources.copyButton}" Height="22" Width="42" Margin="0,0,0,0" Click="oButto_restLanguage_Click"/>
                    <Button x:Name="button_export" HorizontalAlignment="Right" VerticalAlignment="Bottom" Content="{x:Static i18n:Resources.exportButton}" Height="22" Width="42" Margin="0,0,0,0" Click="oButto_restLanguage_Click"/>
                </StackPanel>
            </Grid>
        </StackPanel>
        <Rectangle Name="oRect_0" Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="46" Margin="333,195,0,0" Stroke="Black" VerticalAlignment="Top" Width="59" MouseLeftButtonUp="oRect_MouseLeftButtonUp"/>
        <Rectangle Name="oRect_1" Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="46" Margin="411,195,0,0" Stroke="Black" VerticalAlignment="Top" Width="59" MouseLeftButtonUp="oRect_MouseLeftButtonUp" />

    </Grid>
</Window>
